# Vietnamese Embedding Configuration for LightRAG
# Using BAAI/bge-m3 via HuggingFace Inference API

# ==========================================
# HuggingFace API Configuration
# ==========================================
# Get your token from: https://huggingface.co/settings/tokens
EMBEDDING_BINDING_API_KEY=hf_your_token_here
# Alternative token names (any one works):
# HUGGINGFACE_API_KEY=hf_your_token_here
# HF_TOKEN=hf_your_token_here

# ==========================================
# Embedding Configuration
# ==========================================
EMBEDDING_BINDING=vietnamese
# Model: BAAI/bge-m3 (multilingual, 1024 dims, supports Vietnamese)
# Note: Can also use AITeamVN/Vietnamese_Embedding (will auto-switch to bge-m3)
EMBEDDING_MODEL=BAAI/bge-m3
EMBEDDING_DIM=1024

# ==========================================
# LLM Configuration (Required)
# ==========================================
LLM_BINDING=openai
LLM_MODEL=gpt-4o-mini
LLM_BINDING_HOST=https://api.openai.com/v1
LLM_BINDING_API_KEY=your_openai_api_key_here

# ==========================================
# Server Configuration
# ==========================================
HOST=0.0.0.0
PORT=9621
WORKING_DIR=./rag_storage
INPUT_DIR=./inputs
LOG_LEVEL=INFO

# ==========================================
# Optional: Query Configuration
# ==========================================
ENABLE_LLM_CACHE=true
TOP_K=40
CHUNK_TOP_K=20
MAX_ASYNC=4
MAX_PARALLEL_INSERT=2
